@page "/manage-categories"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer
@using BlogApp.Entidades
@using BlogApp.Components
@using Microsoft.EntityFrameworkCore


@inject BlogApp.Services.BlogService _blogService
@inject IJSRuntime JSRuntime

<PageTitle>Administrar Categorías</PageTitle>

<h1>Administrar Categorías</h1>

<div class="text-end mb-3">
    <button class="btn btn-primary" @onclick="AddNewCategory">
        + Agregar Nueva Categoría
    </button>
</div>

@if (_categories == null)
{
    <p><em>Cargando categorías...</em></p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                @* <th>ID</th> *@
                <th>Nombre</th>
                <th style="width: 180px; white-space: nowrap;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in _categories)
            {
                <tr class="fade-in">
                    @* <td>@category.Id</td> *@
                    <td>@category.Name</td>

                    <td class="d-flex align-items-center justify-content-start" style="height: 60px;">
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => EditCategory(category)">Editar</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => OpenConfirmationModal(category)">Eliminar</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@if (_showModal)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show" style="display:block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">@(_categoryToEdit.Id == 0 ? "Agregar Nueva Categoría" : "Editar Categoría")</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@_categoryToEdit" OnValidSubmit="HandleCategorySave" FormName="CategoryForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary />


                        @if (!string.IsNullOrEmpty(_saveErrorMessage))
                        {
                            <div class="alert alert-danger">
                                @_saveErrorMessage
                            </div>
                        }

                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre</label>
                            <InputText id="name" class="form-control" @bind-Value="_categoryToEdit.Name" />
                        </div>


                        <div class="modal-footer border-top-0 p-0 pt-3 d-flex justify-content-end">
                            <button type="button" class="btn btn-secondary me-2" @onclick="CloseModal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}


<ConfirmationModal ShowModal="_showConfirmDeleteModal"
                   Title="Confirmar Eliminación"
                   Message="@_deleteMessage"
                   ConfirmText="Sí, Eliminar"
                   OnConfirmation="HandleDeleteConfirmation" />


@code {
    private List<BlogApp.Entidades.Categoria>? _categories;
    // Inicializamos sin Slug
    private bool _showModal = false;
    private BlogApp.Entidades.Categoria _categoryToEdit = new() { Name = "" };

    private bool _showConfirmDeleteModal = false;
    private string _deleteMessage = "";
    private int _categoryToDeleteId = 0;
    private string _saveErrorMessage = "";


    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        _categories = await _blogService.GetCategoriesAsync();
    }

    private void AddNewCategory()
    {
        _categoryToEdit = new BlogApp.Entidades.Categoria { Name = "" };
        _saveErrorMessage = "";
        _showModal = true;
    }

    private void EditCategory(BlogApp.Entidades.Categoria category)
    {
        _categoryToEdit = category;
        _saveErrorMessage = "";
        _showModal = true;
    }

    private void CloseModal()
    {
        _showModal = false;
    }

    private async Task HandleCategorySave()
    {
        try
        {
            if (_categoryToEdit.Id == 0)
            {
                await _blogService.CreateCategoryAsync(_categoryToEdit);
            }
            else
            {
                await _blogService.UpdateCategoryAsync(_categoryToEdit);
            }

            CloseModal();
            _saveErrorMessage = "";
        }
        catch (Microsoft.EntityFrameworkCore.DbUpdateException ex)
        {
            if (ex.InnerException?.Message?.Contains("unique index") == true || ex.InnerException?.Message?.Contains("duplicate key") == true)
            {
                _saveErrorMessage = "Error: El nombre proporcionado ya existe. Por favor, elige uno diferente.";
            }
            else
            {
                _saveErrorMessage = "Error de base de datos al guardar la categoría.";
            }
            return;
        }
        catch (Exception)
        {
            _saveErrorMessage = "Ocurrió un error inesperado al guardar.";
            return;
        }

        await LoadCategories();
        StateHasChanged();
    }

    private void OpenConfirmationModal(BlogApp.Entidades.Categoria category)
    {
        _categoryToDeleteId = category.Id;
        _deleteMessage = $"¿Estás seguro de que quieres eliminar la categoría '{category.Name}'? Esta acción es irreversible.";
        _showConfirmDeleteModal = true;
    }

    private async Task HandleDeleteConfirmation(bool confirmed)
    {
        _showConfirmDeleteModal = false;

        if (confirmed && _categoryToDeleteId != 0)
        {
            await _blogService.DeleteCategoryAsync(_categoryToDeleteId);
            _categoryToDeleteId = 0;
            await LoadCategories();
            StateHasChanged();
        }
    }
}