@rendermode InteractiveServer

@if (ShowModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="() => OnConfirmation.InvokeAsync(false)"></button>
                </div>
                <div class="modal-body">
                    <p>@Message</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="() => OnConfirmation.InvokeAsync(false)">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="() => OnConfirmation.InvokeAsync(true)">@ConfirmText</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool ShowModal { get; set; }

    [Parameter]
    public string Title { get; set; } = "Confirmar Acción";

    [Parameter]
    public string Message { get; set; } = "¿Estás seguro de que quieres realizar esta acción?";

    [Parameter]
    public string ConfirmText { get; set; } = "Confirmar";

    [Parameter]
    public EventCallback<bool> OnConfirmation { get; set; }
}