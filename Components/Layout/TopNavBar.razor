@using Microsoft.AspNetCore.Authorization
@using BlogApp.Components.Account.Shared

<header class="modern-header">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="logo-brand" href="/">
                <i class="bi bi-journal-richtext logo-icon" style="color: var(--accent-gold);"></i>
                <span class="logo-text">Zona Esencial</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <NavLink class="nav-link modern-nav-link" href="/" Match="NavLinkMatch.All">
                            <i class="bi bi-house-door nav-icon"></i> Inicio
                        </NavLink>
                    </li>

                    <AuthorizeView>
                        <Authorized>
                            <li class="nav-item">
                                <NavLink class="nav-link modern-nav-link" href="/my-posts">
                                    <i class="bi bi-pen nav-icon"></i> Mis Blogs
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link modern-nav-link" href="/manage-categories">
                                    <i class="bi bi-tags nav-icon"></i> Categor√≠as
                                </NavLink>
                            </li>
                        </Authorized>
                    </AuthorizeView>

                    <li class="nav-item">
                        <NavLink class="nav-link modern-nav-link" href="/about">
                            <i class="bi bi-info-circle nav-icon"></i> Acerca de
                        </NavLink>
                    </li>

                    <AuthorizeView Roles="Admin">
                        <Authorized>
                            <li class="nav-item">
                                <NavLink class="nav-link modern-nav-link admin-link" href="/admin/users">
                                    <i class="bi bi-shield-check nav-icon"></i> Admin
                                    <span class="admin-badge">SOLO ADMIN</span>
                                </NavLink>
                            </li>
                        </Authorized>
                    </AuthorizeView>
                </ul>

                <div class="d-flex align-items-center gap-3">
                    <LoginDisplay />
                </div>
            </div>
        </nav>
    </div>
</header>